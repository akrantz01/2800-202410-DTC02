  "version": "0.2.0",
  "configurations": [
    {
      "name": "analysis-manager",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "development/function.py",
        "FLASK_DEBUG": "1",
        "FLASK_RUN_PORT": "8000",
        "FUNCTION": "analysis_manager"
      },
      "args": ["run", "--no-debugger"],
      "autoStartBrowser": false
    },
    {
      "name": "tone-analyzer",
